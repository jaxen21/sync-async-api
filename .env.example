# Application Settings
APP_NAME=sync-async-api
DEBUG=false
HOST=0.0.0.0
PORT=8000

# Database
DATABASE_PATH=./data/requests.db

# Sync Endpoint Configuration
MAX_SYNC_CONCURRENCY=10
WORK_TIMEOUT_SECONDS=30

# Async Worker Configuration
NUM_WORKERS=5
MAX_QUEUE_SIZE=100
CALLBACK_TIMEOUT_SECONDS=10
MAX_CALLBACK_RETRIES=3
RETRY_BACKOFF_BASE=2

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=60
MAX_PAYLOAD_SIZE_KB=100

# Security
ALLOWED_CALLBACK_SCHEMES=http,https
BLOCK_PRIVATE_IPS=true
BLOCK_LOCALHOST=true

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# CORS (comma-separated origins)
CORS_ORIGINS=*
CORS_ALLOW_CREDENTIALS=false
